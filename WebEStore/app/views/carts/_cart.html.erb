<h2>Your Shopping Cart</h2>

<table class="table cart-table">
<%= render(cart.line_items) %>
<tr class="total-line">
<td colspan="2" class="total-text">Total</td>
<td class="total-cell"><%= number_to_currency(cart.total_price) %></td>
</tr>
</table>

<%= button_to "Proceed to Checkout", new_order_path, method: :get, 
			class: 'btn btn-block  product-btn btn-large btn-primary' %>
<%= button_to 'Empty cart', cart, class: 'btn product-btn btn-block btn-large btn-danger', method: :delete,
confirm: 'Are you sure?' %>