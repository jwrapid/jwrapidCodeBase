<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(@order.errors.count, "error") %>.
      </div>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <h2>Shipping Information</h2>

    <%= f.label :full_name %>
    <%= f.text_field :full_name %>

    <%= f.label :address %>
    <%= f.text_area :address, rows: 3 %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>

    <%= f.label :shipping_type %>
    <%= f.select :shipping_type, Order::SHIPPING_TYPES,
                      prompt: 'Select a shipping method' %>
                       
    <%= f.submit "Place Order", class: "btn btn-large btn-primary"  %>

<% end %>
