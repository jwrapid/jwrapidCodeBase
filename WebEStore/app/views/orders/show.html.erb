<% provide(:title, @order.id) %>
<h1> Order #<%= @order.id %> </h1>

<div class="row">
  <div class="span6 offset3">
    <p>
      <b>Full name:</b>
      <%= @order.full_name %>
    </p>

    <p>
      <b>Address:</b>
      <%= @order.address %>
    </p>

    <p>
      <b>City:</b>
      <%= @order.city %>
    </p>

    <p>
      <b>Postal code:</b>
      <%= @order.postal_code %>
    </p>

    <p>
      <b>Shipping type:</b>
      <%= @order.shipping_type %>
    </p>

    <% if  is_admin? %>
    <%= link_to 'Edit', edit_order_path(@order), class: 'btn' %>
    <%= link_to 'Back', orders_path, class: 'btn' %>
    <% else %>
    <%= link_to 'Back', user_path(@order.user_id), class: 'btn-large btn' %>
    <% end %>
 </div>
</div>